{% extends "layouts/base.njk" %}

{% block content %}
	<article class="[ wrapper flow ] note">

		{% if title %}<h1>{{ title }}</h1>{% endif %}
		<time datetime="{{ date | dateTimeLocal }}">{{ date | dateTimeLocalFriendly("d LLLL y, ") }}{{ date | dateTimeLocalFriendly("t") | lower }}</time>

		{{ content | safe }}

	</article>
{% endblock %}
