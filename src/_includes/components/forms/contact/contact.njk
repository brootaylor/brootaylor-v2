<section class="[ wrapper ] [ flow ]">

	<form class="form" method="post" name="contact" action="/contact/thanks" netlify-honeypot="bot-field" data-netlify="true">

		{# This is to trick bots and prevent spam emails being submitted #}
		<p class="hidden">
			<label>Donâ€™t fill this out if you're human: <input name="bot-field"></label>
		</p>

		{# Fields that need filling out #}
		<fieldset class="form__group">
			<ol class="form__list">
				<li class="form__item">
					<label class="form__label" for="name">Your name</label>
					<input class="form__input" id="name" name="name" type="text" required>
				</li>
				<li class="form__item">
					<label class="form__label" for="email">Your email</label>
					<input class="form__input" id="email" name="email" type="email" required>
				</li>
				<li class="form__item">
					<label class="form__label" for="message">Message</label>
					<textarea class="form__input" id="message" name="message" rows="10" cols="20" placeholder="Please write your message here..." required></textarea>
				</li>
			</ol>

			{# Submit button #}
			<button class="[ button button--primary ]" type="submit">Send message</button>

		</fieldset>

	</form>

</section>
