{
	"name": "brootaylor-v2",
	"version": "1.0.18",
	"description": "Version 2 of my personal website, brootaylor.com",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/brootaylor/brootaylor-v2.git"
	},
	"bugs": {
		"url": "https://github.com/brootaylor/brootaylor-v2/issues"
	},
	"homepage": "https://github.com/brootaylor/brootaylor-v2#readme",
	"keywords": [
		"personal-website",
		"blog"
	],
	"author": {
		"name": "Bruce Taylor",
		"url": "https://brootaylor.com/"
	},
	"license": "SEE LICENSE IN LICENSE",
	"scripts": {
		"clean": "rimraf www && mkdir www",
		"prebuild": "npm run clean && echo 'Getting rid of old stuff first ðŸ”¥'",
		"js:docs": "./node_modules/.bin/jsdoc src/**/*.js -d docs/jsdocs",
		"js:docs-view": "npm run js:docs && cd docs/jsdocs && open index.html",
		"sass:docs": "sassdoc src/ -d docs/sassdocs",
		"sass:docs-view": "npm run sass:docs && cd docs/sassdocs && open index.html",
		"sass:tokens": "json-to-scss src/_data/tokens.json src/styles/abstracts/_tokens.scss",
		"sass:dev": "node-sass --output-style uncompressed --source-map true -o www/styles src/styles && npm run lint:sass",
		"sass:prod": "npm run sass:tokens && node-sass --output-style compressed --source-map true -o www/styles src/styles",
		"postcss": "postcss --map --no-map -r www/styles/*.css --config config/postcss.config.js",
		"lint:markdown": "markdownlint src/**/*.md",
		"lint:sass": "sass-lint 'src/**/*.scss' -v -q",
		"watch:files": "eleventy --quiet --serve",
		"watch:styles": "onchange 'src/styles/**/*.scss' -- npm run build:styles-dev",
		"watch:scripts": "cross-env rollup -c config/rollup.config.js --watch",
		"watch": "npm-run-all --parallel watch:*",
		"build:files": "ELEVENTY_ENV=production eleventy --quiet",
		"build:styles-dev": "npm run sass:dev && npm run postcss",
		"build:styles-prod": "npm run sass:prod && npm run postcss",
		"build:scripts-dev": "rollup -c config/rollup.config.js",
		"build:scripts-prod": "cross-env ELEVENTY_ENV=production rollup -c config/rollup.config.js",
		"build:docs": "npm run sass:docs && npm run js:docs",
		"build": "npm run build:styles-prod && npm run build:scripts-prod && npm run build:files",
		"postbuild": "echo 'All the assets have built successfully... hopefully ðŸ˜¬'",
		"netlify-dev:local": "netlify dev",
		"netlify-dev:live": "netlify dev --live",
		"netlify-status": "netlify status",
		"deploy-draft": "npm run build && netlify deploy",
		"deploy-production": "netlify deploy --prod",
		"audit:accessibility": "npx pa11y --standard WCAG2AA http://brootaylorv2.netlify.com",
		"audit:performance": "lighthouse https://brootaylorv2.netlify.com --budget-path=config/budget.json --output-path=./brootaylor-performance-results.html --view",
		"audit:npm-local": "ncu",
		"audit:npm-global": "ncu -g",
		"debug": "DEBUG=* npx eleventy"
	},
	"dependencies": {
		"@11ty/eleventy": "^0.10.0",
		"@11ty/eleventy-plugin-syntaxhighlight": "^3.0.1",
		"autoprefixer": "^9.7.4",
		"concurrently": "^5.1.0",
		"date-fns": "^2.9.0",
		"faker": "^4.1.0",
		"html-minifier": "^4.0.0",
		"json-to-scss": "^1.5.0",
		"lodash": "^4.17.15",
		"luxon": "^1.22.0",
		"node-sass": "^4.13.1",
		"npm-run-all": "^4.1.5",
		"onchange": "^6.1.0",
		"postcss-cli": "^7.1.0",
		"rimraf": "^3.0.2",
		"slugify": "^1.3.6"
	},
	"devDependencies": {
		"@babel/core": "^7.8.4",
		"@babel/preset-env": "^7.8.4",
		"@rollup/plugin-commonjs": "^11.0.2",
		"@rollup/plugin-json": "^4.0.2",
		"@rollup/plugin-node-resolve": "^7.1.1",
		"@rollup/plugin-replace": "^2.3.1",
		"babel-eslint": "^10.0.3",
		"babel-plugin-transform-remove-console": "^6.9.4",
		"cross-env": "^7.0.0",
		"eslint": "^6.8.0",
		"eslint-config-airbnb": "^18.0.1",
		"eslint-config-prettier": "^6.10.0",
		"eslint-config-wesbos": "0.0.19",
		"eslint-plugin-html": "^6.0.0",
		"eslint-plugin-import": "^2.20.1",
		"eslint-plugin-prettier": "^3.1.2",
		"jsdoc": "^3.6.3",
		"markdownlint-cli": "^0.22.0",
		"minami": "^1.2.3",
		"postcss-preset-env": "^6.7.0",
		"prettier": "^1.19.1",
		"rollup": "^1.31.1",
		"rollup-plugin-babel": "^4.3.3",
		"rollup-plugin-terser": "^5.2.0",
		"sass-lint": "^1.13.1",
		"sassdoc": "^2.7.1"
	}
}
